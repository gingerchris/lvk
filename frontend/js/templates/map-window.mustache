<script id="infowindow" type="text/html">
    <div class="infowindow">
        <div class="left">
            <h5>{{name}}</h5>
            <p>{{address}}<br />{{tel}}</p>
            <a href="{{link}}" target="_blank">Visit Website</a>
        </div>
        <div class="right">
            <img src="{{img}}" />
        </div>
    </div>
</script>

<script id="searchResult" type="text/html">
    {{#data}}
    <li class="result" {{#key}}data-r-key="{{key}}"{{/key}} {{^key}}data-lat="{{lat}}" data-lng="{{lng}}"{{/key}}>
        {{^key}}<p>Show nearest restaurant to:</p>{{/key}}
        {{copy}}
    </li>
    {{/data}}
</script>